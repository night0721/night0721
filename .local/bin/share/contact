#!/bin/sh

f=$HOME/.nky/Me/personal/contact.csv
if [ -z "$1" ]; then
    line=$(cat $f | cut -d"," -f 1 --output-delimiter="\n" | fzf)
    grep "$line" $f | awk -F, '{print $2; if (length($3) > 1) print $3}'
else
    while IFS="," read -r name phone1 phone2
    do
        echo "Name: $name"
        echo "Phone 1: $phone1"
        if [ ${#phone2} -gt 1 ]; then
            echo "Phone 2: $phone2"
        fi
        echo ""
    done < "$f"
fi
