#! /bin/sh

op=$( echo -e " Poweroff\n Reboot\n Suspend\n Lock\n Logout" | wofi -i --dmenu --hide-scroll --width 250 --height 210 --define=hide_search=true | awk '{print tolower($2)}' )

case $op in 
        poweroff)
                ;&
        reboot)
                ;&
        suspend)
                systemctl $op
                ;;
        lock)
		        swaylock
                ;;
        logout)
                hyprctl dispatch exit 0
                ;;
esac
