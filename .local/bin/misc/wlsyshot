#!/bin/sh

. $HOME/.rc

auth="$EZAPIKEY"
url="https://api.e-z.host/files"
PICTURE_DIR="$HOME/.nky/Photo/Me/"
fileName=$(echo "/tmp/$(date +'%s_grim.png')")

snipping=$(echo -e "Area\nScreen\nFull" | wmenu -p "Snipping tool")
# main program
case $snipping in
    "Full")
        grim $fileName;;
    "Screen")
        grim -o $(slurp -f %o -or) $fileName;;
    "Area")
        grim -g "$(slurp)" $fileName;;
esac

if [ -z $snipping ]; then
    exit 0
fi

# function
mods_la=$(printf "Copy\nEdit\nSave\nUpload" | wmenu -p "Options:")
if [ -z $mods_la ]; then
exit 0
fi

case $mods_la in
"Edit") swappy -f $fileName;;
"Save") cp $fileName $PICTURE_DIR;;
"Copy") wl-copy < $fileName -t image/png;;
"Upload")
    image_url=$(curl -X POST -F "file=@"$fileName -H "key: "$auth -v "$url" 2>/dev/null)
    echo $image_url > /tmp/upload.json
    response_file="/tmp/upload.json"
    cat /tmp/upload.json | jq -r ".imageUrl" | wl-copy
    notify-send "Image URL copied to clipboard" -a "Grim"
    rm $fileName
esac
notify-send "Finish!"
